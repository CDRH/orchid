<h2>Browse</h2>

<p>
  <%= link_to "All Items in the Archive", search_path, html_options = {class: "btn btn-lg btn-default"} %>
</p>

<h3>Browse by:</h3>
<div class="row bottom-buffer-lg">
  <% Facets.facet_info.each_with_index do |(facet_name, facet_info), index| %>
    <div class="col-md-3">
      <% id = datify_name facet_name %>
      <%= link_to browse_facet_path(id), html_options = {"aria-controls": id, class: "btn btn-lg btn-block btn-default"} do %>
        <%= facet_info["label"] %>
      <% end %>
    </div>
    <% if index % 3 == 2 %>
</div>
<div class="row bottom-buffer-lg">
    <% end %>
  <% end %>
</div>

