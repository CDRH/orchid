<% @site_section = "search" %>
<% if params["q"].blank? && params["f"].blank? %>
  <h2><%= t "search.all_items", default: "All Items" %></h2>
<% else %>
  <h2><%= t "search.search_results", default: "Search Results" %></h2>
<% end %>

<div class="row search_form">
  <%= render_overridable("search_box") %>

  <div class="col-sm-3">
    <div class="clearfix">
      <h4 class="pull-left">
        <%= t "search.filters.filter_by", default: "Filter by" %>:
      </h4>
      <%= render_overridable("clear_facets") %>
    </div>
    <%= render_overridable("date_limit") %>
    <%= render_overridable("facets", facets: @res.facets) %>
  </div> <!-- col-md-3 -->

  <div class="col-sm-9">
    <%= render_overridable("summary_boxes") %>
    <%= render_overridable("sort_and_page_ui") %>

    <!-- search results section -->
    <%= render_overridable("search_res_count") %>
    <%= render_overridable("search_res_items") %>

    <%= render_overridable("sort_and_page_ui") %>
  </div>
</div>
