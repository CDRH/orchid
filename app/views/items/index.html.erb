<h2>Search Results</h2>

<!-- search form -->
<div class="row">

  <%= render partial: "partials/search_box" %>

  <div class="col-md-3">
    <%= render partial: "partials/clear_facets" %>
    <%= render partial: "partials/facets", locals: {facets: @res.facets} %>
  </div> <!-- col-md-3 -->

  <div class="col-md-9">
    <%= render partial: "partials/search_summary_boxes" %>
    <%= render partial: "partials/sort_and_page_ui" %>

    <!-- search results section -->
    <h4>Your search for <%= params["q"] %> returned <%= pluralize @res.count, "result" %></h4>

    <% if @res.count > 0 %>
      <% @res.items.each do |item| %>
        <div class="searchResults">
          <%= render partial: "partials/search_res_item", locals: {item: item } %>
        </div>
      <% end %>
    <% end %>

    <div class="col-md-9 pagination_container">
      <%= paginator @res.pages %>
    </div>
  </div>
</div>
