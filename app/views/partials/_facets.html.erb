<% if facets %>
  <% facets.each do |type, list| %>
    <% if list.length > 0 %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= type %></h3>
        </div>
        <div class="panel-body">
          <ul class="list-unstyled">
            <% list.each do |label, num| %>
              <% selected = facet_selected?(type, label) %>
              <% display = label.length > 0 ? label : "No Label" %>
              <li <%# selected_class(selected) %>>
                <%= link_to display, search_path(facet_link(type, label)) %>
                <span class="badge"><%= num %></span>
                <% if selected %>
                  <%= link_to search_path(remove_facet(type, label)) do %>
                    <button class="btn btn-warning btn-xs">x</button>
                  <% end %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
